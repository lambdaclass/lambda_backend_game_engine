<%= if @conn.assigns[:updated] do %>
    <h3>Configuration has been updated!</h3>
<% end %>

<%= if @conn.assigns[:error_reason] do %>
    <h3>Failed to update the config due to: <%= @conn.assigns[:error_reason] %></h3>
<% end %>

<form method="post" action={~p"/configuration"}>
    <textarea id="config" name="config" rows={@rows} cols="120">
        <%= @config_json%>
    </textarea>

    <button>Save</button>
</form>
